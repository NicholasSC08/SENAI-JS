// 1) Fazer um programa onde o usuário pode acessar as seguintes opções:

// A) Falar com a atendente    B) Falar com o RH
// C) Falar com o gerente       D) Sair

let opcao_usuario = prompt(`Digite entre as opções: \nA) Falar com o atendente\nB) Falar com o RH\nC) Falar com o gerente\nD) Sair`).toUpperCase();

switch(opcao_usuario){

    case `A`:
        alert(`Falar com o gerente.`);
    break;
    
    case `B`:
        alert(`Falar com o RH`);
        break;
        case `C`:
            alert(`Falar com o gerente`);
            break;
            case `D`:
                alert(`Sair`);
                break;
                default:
                    alert(`Digite entre, A, B, C, D`);
  
    };
